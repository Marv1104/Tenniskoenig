<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.tco.model.User" table = "user">

        <meta attribute = "class-description">
            This class show the car detail, and mapping for the DB
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "vorName" column = "Vorname" type = "string"/>
        <property name = "nachName" column = "Nachname" type = "string"/>
        <property name = "geschlechtW" column = "GeschlechtW" type = "boolean"/>

    </class>
</hibernate-mapping>